<div style="margin-left: 40px;">
    <% if confirm_id?(@logs) %>
        <form action="/logs/<%= @logs.id %>/edit">
            <input type="hidden" name="" value="EDIT">
            <input type="submit" name="" value="Edit Log">
        </form>

        <form action="/logs/<%= @logs.id %>" method="post">
            <input type="hidden" id="hidden" name="_method" value="DELETE">
            <input type="submit" name="" value="Delete Log">
        </form>
    <% end %>
    <br>
    <h2>Shoot Log</h2>
    <h3><%= @logs.shoot_title %></h3>
    <p><%= @logs.shoot_date %></p>
    <p>Notes: <%= @logs.notes %></p><br>

    <br><strong>Location:</strong><br>
    <p>City: <%= @logs.city %></p>
    <p>Place: <%= @logs.place %></p>
    <p>State: <%= @logs.state %></p>
    <p>Country: <%= @logs.country %></p><br>

    <br><strong>Gear:</strong><br>
    <p>Camera: <%= @logs.camera %></p>
    <p>Lens: <%= @logs.lens %></p>
    <p>Speedlight: <%= @logs.speedlight %></p>
    <p>Drone: <%= @logs.drone %></p>
    <p>Accessories: <%= @logs.accessories %></p>
    <br>

</div>
